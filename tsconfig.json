{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": false,
    "jsx": "react-jsx",
    "module": "ES2020",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2020",
    "resolveJsonModule": true,
    "importHelpers": true,
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "Node",
    "outDir": "dist/js",
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["./src/**/**/*"],
  "exclude": ["**/node_modules", "**/.*/"]
}
